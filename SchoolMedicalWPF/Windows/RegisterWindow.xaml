<Window x:Class="SchoolMedicalWPF.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký" Height="700" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="{StaticResource SecondaryColor}">
    <Grid Margin="20">
        <Border Background="{StaticResource CardBackground}" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="Đăng ký tài khoản" Style="{StaticResource CustomTextBlock}" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Họ" Style="{StaticResource CustomTextBlock}" Margin="0,0,0,5"/>
                <TextBox x:Name="FirstNameTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,10"/>
                <TextBlock Text="Tên" Style="{StaticResource CustomTextBlock}" Margin="0,0,0,5"/>
                <TextBox x:Name="LastNameTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,10"/>
                <TextBlock Text="Vai trò" Style="{StaticResource CustomTextBlock}" Margin="0,0,0,5"/>
                <TextBox x:Name="RoleTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,10"/>
                <TextBlock Text="Tên đăng nhập" Style="{StaticResource CustomTextBlock}" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,10"/>
                <TextBlock Text="Mật khẩu" Style="{StaticResource CustomTextBlock}" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource CustomPasswordBox}" Margin="0,0,0,10"/>
                <TextBlock Text="Email" Style="{StaticResource CustomTextBlock}" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,10"/>
                <TextBlock Text="Liên hệ" Style="{StaticResource CustomTextBlock}" Margin="0,0,0,5"/>
                <TextBox x:Name="ContactTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,10"/>
                <Button Content="Đăng ký" Click="Register_Click" Style="{StaticResource CustomButton}" Margin="0,20,0,10" Width="150" HorizontalAlignment="Center"/>
                <TextBlock Text="Quay lại đăng nhập" Style="{StaticResource CustomTextBlock}" HorizontalAlignment="Center" Cursor="Hand" Foreground="{StaticResource PrimaryColor}" MouseLeftButtonDown="BackToLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Page x:Class="SchoolMedicalWPF.Pages.DocumentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Quản lý Tài liệu">
    <Grid Margin="20" Background="{StaticResource SecondaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Form nhập liệu -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Thông tin tài liệu" Style="{StaticResource CustomTextBlock}" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Học sinh" Style="{StaticResource CustomTextBlock}" Margin="0,5,0,2"/>
                <ComboBox x:Name="StudentComboBox" Margin="0,0,0,5" FontFamily="Segoe UI" FontSize="14" DisplayMemberPath="FullName"/>

                <TextBlock Text="Tên tệp" Style="{StaticResource CustomTextBlock}" Margin="0,5,0,2"/>
                <TextBox x:Name="FileNameTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,5" Tag="Tên tệp"/>

                <TextBlock Text="Đường dẫn tệp" Style="{StaticResource CustomTextBlock}" Margin="0,5,0,2"/>
                <TextBox x:Name="FilePathTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,5" Tag="Đường dẫn tệp" IsReadOnly="True"/>

                <Button Content="Chọn tệp" Click="SelectFile_Click" Style="{StaticResource CustomButton}" Margin="0,5,0,5" Width="100"/>

                <TextBlock Text="Mô tả" Style="{StaticResource CustomTextBlock}" Margin="0,5,0,2"/>
                <TextBox x:Name="DescriptionTextBox" Style="{StaticResource CustomTextBox}" Margin="0,0,0,5" Tag="Mô tả" AcceptsReturn="True" Height="60"/>

                <TextBlock Text="Người tải lên" Style="{StaticResource CustomTextBlock}" Margin="0,5,0,2"/>
                <ComboBox x:Name="UploadedByComboBox" Margin="0,0,0,5" FontFamily="Segoe UI" FontSize="14" DisplayMemberPath="FullName"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Thêm" Click="AddDocument" Style="{StaticResource CustomButton}" Margin="0,0,10,0" Width="100"/>
                    <Button Content="Cập nhật" Click="UpdateDocument" Style="{StaticResource CustomButton}" Margin="0,0,10,0" Width="100"/>
                    <Button Content="Xóa" Click="DeleteDocument" Style="{StaticResource CustomButton}" Margin="0,0,10,0" Width="100"/>
                    <Button Content="Xóa form" Click="ClearInputs" Style="{StaticResource CustomButton}" Margin="0,0,10,0" Width="100"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Danh sách tài liệu -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" CornerRadius="10" Padding="10">
            <DataGrid x:Name="DocumentsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" 
                      SelectionChanged="DocumentsDataGrid_SelectionChanged" BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding DocumentId}" Width="50"/>
                    <DataGridTextColumn Header="Học sinh" Binding="{Binding Student.FullName}" Width="150"/>
                    <DataGridTextColumn Header="Tên tệp" Binding="{Binding FileName}" Width="150"/>
                    <DataGridTextColumn Header="Đường dẫn" Binding="{Binding FilePath}" Width="200"/>
                    <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="150"/>
                    <DataGridTextColumn Header="Người tải lên" Binding="{Binding UploadedByNavigation.FullName}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>